{
  "name": "flipkart",
  "version": "1.0.0",
  "description": "this page is for eccomerce",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "node-sass sass/base.scss css/index.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/base.scss css/index.comp.css",
    "concat:css": "concat -o css/index.concat.css css/icon-font.css css/index.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/index.concat.css -o css/index.prefix.css",
    "compress:css": "node-sass css/index.prefix.css css/index.css --output-style compressed",
    "build:css": "npm-run-all complie:sass concat:css prefix:css compress:css"
  },
  "author": "Amresh",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concat": "^1.0.3",
    "devserver": "^0.2.5",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
